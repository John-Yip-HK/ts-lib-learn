{
	"compilerOptions": {
		/* Defaults */
		"target": "es2016",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,

		/* Additional configs */
		"jsx": "react-jsx",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": true /* Sourcemap files allow debugging tools to trace back original TS source code when working with emitted JS files. */,
		"outDir": "dist",
		"moduleResolution": "node",
		"emitDeclarationOnly": true,
		"allowSyntheticDefaultImports": true
	},
	/* Avoid transpiling below directories and files. */
	"exclude": [
		"dist",
		"node_modules",
		"src/**/*.test.tsx",
		"src/**/*.stories.tsx"
	]
}
